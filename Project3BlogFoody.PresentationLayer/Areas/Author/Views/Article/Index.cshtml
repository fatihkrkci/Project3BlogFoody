@model List<Project3BlogFoody.EntityLayer.Concrete.Article>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sidebar ve Content</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      display: flex;
      font-family: Arial, sans-serif;
    }

    .sidebar {
      width: 250px;
      height: 100vh;
      background-color: #2c3e50;
      color: #ecf0f1;
      display: flex;
      flex-direction: column;
      padding: 20px;
    }

    .sidebar h2 {
      font-size: 24px;
      margin-bottom: 20px;
    }

    .sidebar a {
      color: #ecf0f1;
      text-decoration: none;
      font-size: 18px;
      margin: 10px 0;
      padding: 10px;
      border-radius: 4px;
      transition: background-color 0.3s;
    }

    .sidebar a:hover {
      background-color: #34495e;
    }

    .content {
      flex: 1;
      padding: 20px;
    }

    .content h1 {
      font-size: 32px;
      margin-bottom: 20px;
    }

    .content p {
      font-size: 18px;
      line-height: 1.6;
    }
  </style>
</head>
<body>
  <div class="sidebar">
    <h2>Menü</h2>
    <a href="#">Yazılarım</a>
    <a href="#">Profilim</a>
    <a href="#">Siteye Git</a>
    <a href="#">Ayarlar</a>
    <a href="#">Çıkış Yap</a>
    <a href="#">Yorumlarım</a>
  </div>
  <div class="content">
    <h1>Yazılarım</h1>
        @foreach (var item in Model)
        {
            <h2>@item.Title</h2>
            <br />
        }
  </div>
</body>
</html>