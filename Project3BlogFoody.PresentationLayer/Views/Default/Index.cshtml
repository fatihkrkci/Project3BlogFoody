@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("_DefaultHeadComponentPartial")

<body>
    <div class="container mt-4">
        <div class="row">
            <!-- Blog Listesi -->
            @await Component.InvokeAsync("_DefaultArticleListComponentPartial")

            <!-- Sağ Taraf -->
            <div class="col-lg-4">
                <!-- Kategoriler -->
                @await Component.InvokeAsync("_DefaultCategoryListComponentPartial")

                <!-- Sosyal Medya -->
                @await Component.InvokeAsync("_DefaultSocialMediaComponentPartial")
                <!-- Öne Çıkan Bloglar -->
                <div class="mb-4">
                    <h4>Öne Çıkan Bloglar</h4>
                    <ul class="list-group">
                        <li class="list-group-item"><a href="#">Öne Çıkan Blog 1</a></li>
                        <li class="list-group-item"><a href="#">Öne Çıkan Blog 2</a></li>
                        <li class="list-group-item"><a href="#">Öne Çıkan Blog 3</a></li>
                    </ul>
                </div>
                <!-- Yazarlar -->
                <div class="mb-4">
                    <h4>Yazarlar</h4>
                    <ul class="list-group">
                        <li class="list-group-item">Ahmet Yılmaz</li>
                        <li class="list-group-item">Mehmet Kaya</li>
                        <li class="list-group-item">Elif Demir</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
