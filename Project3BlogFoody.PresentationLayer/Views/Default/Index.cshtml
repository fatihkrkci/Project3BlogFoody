
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("_DefaultHeadComponentPartial")

<body>
    <div class="container mt-4">
        <div class="row">
            <!-- Blog Listesi -->
            <div class="col-lg-8">
                <!-- Blog 1 -->
                <div class="card mb-4">
                    <img src="https://via.placeholder.com/750x300" class="card-img-top" alt="Blog Kapak Fotoğrafı">
                    <div class="card-body">
                        <h5 class="card-title">Blog Başlığı 1</h5>
                        <p class="text-muted">Oluşturma Tarihi: 21 Kasım 2024 | Kategori: Teknoloji | Yazar: Ahmet Yılmaz</p>
                        <p class="card-text">Bu, blog açıklamasıdır. Blogun içeriğine dair kısa bir bilgi verir.</p>
                        <a href="#" class="btn btn-primary">Devamını Oku</a>
                    </div>
                </div>
                <!-- Blog 2 -->
                <div class="card mb-4">
                    <img src="https://via.placeholder.com/750x300" class="card-img-top" alt="Blog Kapak Fotoğrafı">
                    <div class="card-body">
                        <h5 class="card-title">Blog Başlığı 2</h5>
                        <p class="text-muted">Oluşturma Tarihi: 20 Kasım 2024 | Kategori: Seyahat | Yazar: Mehmet Kaya</p>
                        <p class="card-text">Bu, blog açıklamasıdır. Blogun içeriğine dair kısa bir bilgi verir.</p>
                        <a href="#" class="btn btn-primary">Devamını Oku</a>
                    </div>
                </div>
                <!-- Blog 3 -->
                <div class="card mb-4">
                    <img src="https://via.placeholder.com/750x300" class="card-img-top" alt="Blog Kapak Fotoğrafı">
                    <div class="card-body">
                        <h5 class="card-title">Blog Başlığı 3</h5>
                        <p class="text-muted">Oluşturma Tarihi: 19 Kasım 2024 | Kategori: Sağlık | Yazar: Elif Demir</p>
                        <p class="card-text">Bu, blog açıklamasıdır. Blogun içeriğine dair kısa bir bilgi verir.</p>
                        <a href="#" class="btn btn-primary">Devamını Oku</a>
                    </div>
                </div>
            </div>

            <!-- Sağ Taraf -->
            <div class="col-lg-4">
                <!-- Kategoriler -->
                @await Component.InvokeAsync("_DefaultCategoryListComponentPartial")

                <!-- Sosyal Medya -->
                <div class="mb-4">
                    <h4>Sosyal Medya</h4>
                    <ul class="list-group">
                        <li class="list-group-item"><a href="#">Facebook</a></li>
                        <li class="list-group-item"><a href="#">Twitter</a></li>
                        <li class="list-group-item"><a href="#">Instagram</a></li>
                        <li class="list-group-item"><a href="#">LinkedIn</a></li>
                    </ul>
                </div>
                <!-- Öne Çıkan Bloglar -->
                <div class="mb-4">
                    <h4>Öne Çıkan Bloglar</h4>
                    <ul class="list-group">
                        <li class="list-group-item"><a href="#">Öne Çıkan Blog 1</a></li>
                        <li class="list-group-item"><a href="#">Öne Çıkan Blog 2</a></li>
                        <li class="list-group-item"><a href="#">Öne Çıkan Blog 3</a></li>
                    </ul>
                </div>
                <!-- Yazarlar -->
                <div class="mb-4">
                    <h4>Yazarlar</h4>
                    <ul class="list-group">
                        <li class="list-group-item">Ahmet Yılmaz</li>
                        <li class="list-group-item">Mehmet Kaya</li>
                        <li class="list-group-item">Elif Demir</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
